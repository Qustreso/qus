---
import Layout from '../layouts/Layout.astro';

interface Product {
  id: number;
  name: string;
  description: string;
  price: number;
  originalPrice: number;
  features: string[];
  image: string;
  category: string;
  popular: boolean;
  link?: string;
  video_data?: {
    type: string;
    youtube_id?: string;
    url?: string;
  };
}
---

<Layout title="Store - Qustreso Studios" description="Professional Roblox development products and services. Get custom scripts, frameworks, and development services." currentPage="store">
  
  <section class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
        Professional <span class="bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">Shop</span>
      </h1>
      <p class="text-xl text-gray-300 mb-8">
        Professional-grade Roblox development products and services. Quality scripts, frameworks, and custom development services.
      </p>
      <div class="flex items-center justify-center gap-6 text-sm text-gray-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-primary-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 4c0-1.11.89-2 2-2s2 .89 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H17c-.8 0-1.54.37-2.01 1l-1.7 2.26V15h-1.5v-3H9v3H7.5V9.5l-1.96-2.61C5.11 6.37 4.37 6 3.57 6H2.46c-.8 0-1.54.37-2.01 1L0 12.5V22h16z"/>
          </svg>
          <span>Happy Clients</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          <span>Quality Guaranteed</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
          </svg>
          <span>Fast Delivery</span>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="glass-primary rounded-2xl p-8 md:p-12 border border-primary-400/30">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-3xl font-bold text-white mb-6">
              Professional Roblox Development Services
            </h2>
            <p class="text-lg text-gray-300 mb-6">
              Delivering high-quality Roblox development solutions with expertise and dedication. 
              Our comprehensive range of products and services is designed to help you create 
              exceptional gaming experiences.
            </p>
            <p class="text-lg text-gray-300 mb-6">
              From custom scripts to complete game frameworks, we provide the tools and services 
              you need to bring your vision to life with professional-grade quality and reliability.
            </p>
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2 text-sm text-gray-300">
                <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>Professional Quality</span>
              </div>
              <div class="flex items-center gap-2 text-sm text-gray-300">
                <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>Reliable Support</span>
              </div>
              <div class="flex items-center gap-2 text-sm text-gray-300">
                <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>Custom Solutions</span>
              </div>
