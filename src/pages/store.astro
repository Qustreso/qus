---
import Layout from '../layouts/Layout.astro';

const API_BASE_URL = 'https://qus-bot-2-production.up.railway.app';

let products = [];

try {
  const response = await fetch(`${API_BASE_URL}/api/products`);
  const data = await response.json();
  
  if (data.success && data.products) {
    products = data.products.map(product => ({
      id: product.id,
      name: product.name,
      description: product.description || `Professional development service - ${product.name}`,
      price: product.price || 150.00,
      originalPrice: product.originalPrice || product.price * 1.67,
      features: product.features || [
        "Professional quality",
        "Full documentation", 
        "Performance optimized",
        "Source code included",
        "Support included",
        "Custom implementation"
      ],
      image: product.image || "https://res.cloudinary.com/dm0o7bd4t/image/upload/v1752895789/Logo_zpxvlb.jpg",
      category: product.category || "script",
      popular: product.popular || false,
      link: product.link,
      video_data: product.video_data
    }));
  }
} catch (error) {
  console.error('Failed to fetch products data:', error);
  products = [
    {
      id: 1,
      name: "Custom Development Service",
      description: "Professional Roblox development services available.",
      price: 150.00,
      originalPrice: 250.00,
      features: [
        "Professional quality",
        "Full documentation",
        "Performance optimized",
        "Source code included",
        "Support included",
        "Custom implementation"
      ],
      image: "https://res.cloudinary.com/dm0o7bd4t/image/upload/v1752895789/Logo_zpxvlb.jpg",
      category: "service",
      popular: true
    }
  ];
}
---

<Layout title="Store - Qustreso Studios" description="Professional Roblox development products and services. Get custom scripts, frameworks, and development services." currentPage="store">
  
  <section class="pt-24 pb-16">
