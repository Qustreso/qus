          <div class="text-center">
            <img src="https://res.cloudinary.com/dm0o7bd4t/image/upload/v1752895789/Logo_zpxvlb.jpg" alt="Qustreso Studios" class="w-64 h-64 mx-auto rounded-2xl object-cover border border-primary-400/30" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="filter-btn active" data-filter="all">
          All Products
        </button>
        <button class="filter-btn" data-filter="script">
          Scripts
        </button>
        <button class="filter-btn" data-filter="framework">
          Frameworks
        </button>
        <button class="filter-btn" data-filter="service">
          Services
        </button>
      </div>

      <!-- Loading State -->
      <div id="loading-state" class="text-center py-16">
        <div class="glass rounded-2xl p-8 max-w-md mx-auto">
          <div class="animate-spin w-16 h-16 border-4 border-primary-400 border-t-transparent rounded-full mx-auto mb-4"></div>
          <h3 class="text-xl font-semibold text-white mb-2">Loading Products...</h3>
          <p class="text-gray-400">Please wait while we fetch the latest products.</p>
        </div>
      </div>

      <!-- Error State -->
      <div id="error-state" class="text-center py-16 hidden">
        <div class="glass rounded-2xl p-8 max-w-md mx-auto">
          <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">Unable to Load Products</h3>
          <p class="text-gray-400 mb-4">We're having trouble loading our products. Please try refreshing the page or contact us directly.</p>
          <button onclick="fetchProducts()" class="btn-primary mr-2">
            Try Again
          </button>
          <a href="https://discord.gg/qustreso" target="_blank" class="btn-primary">
            Contact Support
          </a>
        </div>
      </div>

      <!-- Empty State -->
      <div id="empty-state" class="text-center py-16 hidden">
        <div class="glass rounded-2xl p-8 max-w-md mx-auto">
          <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">No Products Available</h3>
          <p class="text-gray-400 mb-4">We're currently updating our product catalog. Check back soon or contact us for custom solutions.</p>
          <a href="/qus/hire" class="btn-primary">
            Request Custom Quote
          </a>
        </div>
      </div>

      <!-- Products Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 hidden" id="products-grid">
        <!-- Products will be inserted here dynamically -->
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-6">Need Something Custom?</h2>
      <p class="text-xl text-gray-300 mb-8">
        Don't see exactly what you need? We offer custom development services tailored to your specific requirements.
      </p>
      <a href="/qus/hire" class="btn-primary">
        <span>Request Custom Quote</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </section>
</Layout>

<style>
  .btn-primary {
    @apply inline-flex items-center gap-2 px-8 py-3 bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold rounded-lg hover:from-primary-600 hover:to-secondary-600 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl;
  }
  
  .filter-btn {
    @apply px-6 py-2 rounded-lg text-gray-300 hover:text-white transition-colors duration-200 font-medium;
  }
  
  .filter-btn.active {
    @apply bg-primary-500 text-white;
  }
  
  .product-card {
    @apply glass rounded-2xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300 relative;
  }
  
  .popular-badge {
    @apply absolute top-4 left-4 bg-gradient-to-r from-primary-500 to-secondary-500 text-white text-xs font-bold px-3 py-1 rounded-full z-10;
  }
  
  .product-image {
    @apply relative overflow-hidden;
  }
  
  .product-content {
    @apply p-6;
  }
  
  .product-title {
    @apply text-xl font-bold text-white mb-3;
  }
  
  .product-description {
    @apply text-gray-400 mb-4 leading-relaxed;
  }
  
  .product-features {
    @apply mb-6;
  }
  
  .product-pricing {
    @apply flex items-center justify-between mb-6;
  }
  
  .price-container {
    @apply flex items-center gap-2;
  }
  
  .current-price {
    @apply text-2xl font-bold text-white;
  }
  
  .original-price {
    @apply text-lg text-gray-500 line-through;
  }
  
  .discount-badge {
    @apply bg-green-500 text-white text-xs font-bold px-2 py-1 rounded;
  }
  
  .buy-btn {
    @apply w-full bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold py-3 px-6 rounded-lg hover:from-primary-600 hover:to-secondary-600 transform hover:scale-105 transition-all duration-300 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
  
  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>

<script>
  const API_BASE_URL = 'https://qusbot.onrender.com';
  let allProducts: any[] = [];
  let lastDataHash: string = '';
  let currentFilter: string = 'all';
  
  function hashData(data: any): string {
    return JSON.stringify(data).split('').reduce((a, b) => {
      a = ((a << 5) - a) + b.charCodeAt(0);
      return a & a;
    }, 0).toString();
  }

  async function fetchProducts(): Promise<void> {
    const loadingState = document.getElementById('loading-state');
    const errorState = document.getElementById('error-state');
    const emptyState = document.getElementById('empty-state');
    const productsGrid = document.getElementById('products-grid');

    if (!loadingState || !errorState || !emptyState || !productsGrid) return;

    loadingState.classList.remove('hidden');
    errorState.classList.add('hidden');
    emptyState.classList.add('hidden');
    productsGrid.classList.add('hidden');

    try {
      const response = await fetch(`${API_BASE_URL}/api/products`);
      const data = await response.json();
      
      if (data.success && data.products && data.products.length > 0) {
        allProducts = data.products.map((product: any) => ({
          id: product.id || Math.random(),
          name: product.name || "Custom Product",
          description: product.description || `Professional development service - ${product.name || "Custom Product"}`,
          price: parseFloat(product.price) || 0,
          originalPrice: parseFloat(product.originalPrice) || parseFloat(product.price) || 0,
          features: Array.isArray(product.features) ? product.features : [],
          image: product.image || "https://res.cloudinary.com/dm0o7bd4t/image/upload/v1752895789/Logo_zpxvlb.jpg",
          category: product.category || "script",
          popular: Boolean(product.popular) || false,
          link: product.link || null,
          video_data: product.video_data || null
        }));

        lastDataHash = hashData(allProducts);
        renderProducts(allProducts);
        
        loadingState.classList.add('hidden');
        productsGrid.classList.remove('hidden');
      } else {
        loadingState.classList.add('hidden');
        emptyState.classList.remove('hidden');
      }
    } catch (error) {
      console.error('Failed to fetch products data:', error);
      loadingState.classList.add('hidden');
      errorState.classList.remove('hidden');
    }
  }

  async function checkForUpdates(): Promise<void> {
    try {
      const response = await fetch(`${API_BASE_URL}/api/products`);
      const data = await response.json();
      
      if (data.success && data.products) {
        const newProducts = data.products.map((product: any) => ({
          id: product.id || Math.random(),
          name: product.name || "Custom Product",
          description: product.description || `Professional development service - ${product.name || "Custom Product"}`,
          price: parseFloat(product.price) || 0,
          originalPrice: parseFloat(product.originalPrice) || parseFloat(product.price) || 0,
          features: Array.isArray(product.features) ? product.features : [],
          image: product.image || "https://res.cloudinary.com/dm0o7bd4t/image/upload/v1752895789/Logo_zpxvlb.jpg",
          category: product.category || "script",
          popular: Boolean(product.popular) || false,
          link: product.link || null,
          video_data: product.video_data || null
        }));
        
        const currentHash = hashData(newProducts);
        
        if (lastDataHash && lastDataHash !== currentHash) {
          console.log('New products detected, updating store...');
          allProducts = newProducts;
          renderProducts(allProducts);
          filterProducts(currentFilter);
          
          const notification = document.createElement('div');
          notification.textContent = 'New products available!';
          notification.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(to right, #3b82f6, #8b5cf6);
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 600;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            z-index: 9999;
            animation: slideIn 0.3s ease-out;
          `;
          document.body.appendChild(notification);
          
          setTimeout(() => {
            notification.style.animation = 'slideOut 0.3s ease-in';
            setTimeout(() => notification.remove(), 300);
          }, 3000);
        }
        
        lastDataHash = currentHash;
      }
    } catch (error) {
      console.error('Failed to check for updates:', error);
    }
  }

  function renderProducts(products: any[]): void {
    const productsGrid = document.getElementById('products-grid');
    if (!productsGrid) return;
    
    productsGrid.innerHTML = '';

    products.forEach((product) => {
      const productCard = createProductCard(product);
      productsGrid.appendChild(productCard);
    });
  }

  function createProductCard(product: any): HTMLElement {
    const card = document.createElement('div');
    card.className = 'product-card group';
    card.setAttribute('data-category', product.category);
    card.style.cssText = `
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.3s ease;
      position: relative;
    `;

    let mediaContent = '';
    if (product.video_data?.type === 'youtube' && product.video_data?.youtube_id) {
      mediaContent = `
        <iframe 
          src="https://www.youtube.com/embed/${product.video_data.youtube_id}"
          title="${product.name}"
          style="width: 100%; height: 12rem; object-fit: cover; border-radius: 16px 16px 0 0; border: none;"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      `;
    } else if (product.video_data?.type === 'direct' && product.video_data?.url) {
      mediaContent = `
        <video 
          style="width: 100%; height: 12rem; object-fit: cover; border-radius: 16px 16px 0 0;"
          controls
          preload="metadata"
        >
          <source src="${product.video_data.url}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      `;
    } else {
      mediaContent = `<img src="${product.image}" alt="${product.name}" style="width: 100%; height: 12rem; object-fit: cover; border-radius: 16px 16px 0 0;">`;
    }

    let featuresContent = '';
    if (product.features.length > 0) {
      const displayFeatures = product.features.slice(0, 3);
      const remainingCount = product.features.length - 3;
      
      featuresContent = `
        <div style="margin-bottom: 1.5rem;">
          <ul style="list-style: none; padding: 0; margin: 0;">
            ${displayFeatures.map((feature: string) => `
              <li style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; color: #d1d5db; margin-bottom: 0.5rem;">
                <svg style="width: 1rem; height: 1rem; color: #34d399; flex-shrink: 0;" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
                ${feature}
              </li>
            `).join('')}
            ${remainingCount > 0 ? `
              <li style="font-size: 0.875rem; color: #60a5fa; font-weight: 500; margin-top: 0.5rem;">
                +${remainingCount} more features
              </li>
            ` : ''}
          </ul>
        </div>
      `;
    }

    let pricingContent = '';
    if (product.price > 0) {
      const hasDiscount = product.originalPrice > product.price;
      const discountPercent = hasDiscount ? Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100) : 0;
      
      pricingContent = `
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1.5rem;">
          <div style="display: flex; align-items: center; gap: 0.5rem;">
            <span style="font-size: 1.5rem; font-weight: bold; color: white;">$${product.price}</span>
            ${hasDiscount ? `<span style="font-size: 1.125rem; color: #6b7280; text-decoration: line-through;">$${product.originalPrice}</span>` : ''}
          </div>
          ${hasDiscount ? `
            <div style="background-color: #10b981; color: white; font-size: 0.75rem; font-weight: bold; padding: 0.25rem 0.5rem; border-radius: 4px;">
              <span>${discountPercent}% OFF</span>
            </div>
          ` : ''}
        </div>
      `;
    }

    const buyButtonLink = product.link || 'https://discord.gg/qustreso';
    
    card.innerHTML = `
      ${product.popular ? `
        <div style="position: absolute; top: 1rem; left: 1rem; background: linear-gradient(to right, #3b82f6, #8b5cf6); color: white; font-size: 0.75rem; font-weight: bold; padding: 0.25rem 0.75rem; border-radius: 9999px; z-index: 10;">
          <span>Most Popular</span>
        </div>
      ` : ''}
      
      <div style="position: relative; overflow: hidden;">
        ${mediaContent}
      </div>
      
      <div style="padding: 1.5rem;">
        <h3 style="font-size: 1.25rem; font-weight: bold; color: white; margin-bottom: 0.75rem;">${product.name}</h3>
        <p style="color: #9ca3af; margin-bottom: 1rem; line-height: 1.625;">${product.description}</p>
        
        ${featuresContent}
        ${pricingContent}
        
        <button 
          style="width: 100%; background: linear-gradient(to right, #3b82f6, #8b5cf6); color: white; font-weight: 600; padding: 0.75rem 1.5rem; border-radius: 0.5rem; border: none; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 0.5rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); transition: all 0.3s ease; transform: scale(1);"
          onclick="window.open('${buyButtonLink}', '_blank')"
        >
          <span>Get Started</span>
          <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </button>
      </div>
    `;

    card.addEventListener('mouseenter', function() {
      card.style.transform = 'scale(1.05)';
      card.style.boxShadow = '0 25px 30px -5px rgba(0, 0, 0, 0.2)';
    });
    
    card.addEventListener('mouseleave', function() {
      card.style.transform = 'scale(1)';
      card.style.boxShadow = 'none';
    });

    const button = card.querySelector('button');
    if (button) {
      button.addEventListener('mouseenter', function() {
        (button as HTMLElement).style.transform = 'scale(1.05)';
        (button as HTMLElement).style.boxShadow = '0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)';
      });
      
      button.addEventListener('mouseleave', function() {
        (button as HTMLElement).style.transform = 'scale(1)';
        (button as HTMLElement).style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)';
      });
    }

    return card;
  }

  function filterProducts(category: string): void {
    currentFilter = category;
    const productCards = document.querySelectorAll('.product-card');
    
    productCards.forEach((card) => {
      const cardElement = card as HTMLElement;
      const cardCategory = cardElement.getAttribute('data-category');
      if (category === 'all' || cardCategory === category) {
        cardElement.style.display = 'block';
      } else {
        cardElement.style.display = 'none';
      }
    });
  }

  document.addEventListener('DOMContentLoaded', function(): void {
    const style = document.createElement('style');
    style.textContent = `
      @keyframes slideIn {
        from {
          transform: translateX(100%);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }
      @keyframes slideOut {
        from {
          transform: translateX(0);
          opacity: 1;
        }
        to {
          transform: translateX(100%);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);
    
    fetchProducts();
    
    setInterval(checkForUpdates, 5000);
    
    const filterBtns = document.querySelectorAll('.filter-btn');
    
    filterBtns.forEach((btn) => {
      btn.addEventListener('click', function(this: HTMLElement) {
        const filter = this.getAttribute('data-filter') || 'all';
        
        filterBtns.forEach((b) => b.classList.remove('active'));
        this.classList.add('active');
        
        filterProducts(filter);
      });
    });
    
    document.addEventListener('visibilitychange', function(): void {
      if (!document.hidden) {
        checkForUpdates();
      }
    });
  });
</script>
