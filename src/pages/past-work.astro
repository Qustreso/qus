  {
    id: 1,
    title: "MMO RPG Combat System",
    description: "Advanced combat system with hit detection, damage calculation, and special abilities for a large-scale MMO RPG.",
    category: "combat",
    technologies: ["Lua", "Roblox Studio", "Data Stores"],
    image: "/src/public/Images/Logo.jpg",
    featured: true,
    client: "Anonymous Client",
    completionDate: "2024"
  },
  {
    id: 2,
    title: "Player Progression System",
    description: "Comprehensive leveling and skill tree system with persistent data storage and cross-server synchronization.",
    category: "systems",
    technologies: ["Lua", "Data Stores", "Remote Events"],
    image: "/src/public/Images/Logo.jpg",
    featured: false,
    client: "Game Studio X",
    completionDate: "2024"
  },
  {
    id: 3,
    title: "Inventory Management",
    description: "Full-featured inventory system with drag-and-drop functionality, item stacking, and trading capabilities.",
    category: "ui",
    technologies: ["Lua", "Gui", "TweenService"],
    image: "/src/public/Images/Logo.jpg",
    featured: false,
    client: "Indie Developer",
    completionDate: "2023"
  },
  {
    id: 4,
    title: "Main Menu System",
    description: "Modern main menu with animated transitions, settings management, and seamless game integration.",
    category: "ui",
    technologies: ["Lua", "Gui", "TweenService"],
    image: "/src/public/Images/Logo.jpg",
    featured: false,
    client: "Studio Alpha",
    completionDate: "2023"
  },
  {
    id: 5,
    title: "RNG & Loot System",
    description: "Complex random number generation system for loot drops, crafting, and procedural content generation.",
    category: "systems",
    technologies: ["Lua", "Random", "Data Structures"],
    image: "/src/public/Images/Logo.jpg",
    featured: false,
    client: "MMO Games Inc",
    completionDate: "2023"
  },
  {
    id: 6,
    title: "Ability Framework",
    description: "Modular ability system supporting cooldowns, mana costs, and complex spell interactions.",
    category: "combat",
    technologies: ["Lua", "Modules", "Remote Events"],
    image: "/src/public/Images/Logo.jpg",
    featured: false,
    client: "RPG Studio",
    completionDate: "2023"
  }
