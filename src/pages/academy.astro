---
import Layout from '../layouts/Layout.astro';

const subscriptionTiers = [
  {
    id: 1,
    name: "Tier A",
    description: "Perfect for beginners starting their Roblox development journey.",
    price: 20,
    billing: "month",
    features: [
      "Access to Fundamentals course",
      "Basic Lua programming tutorials",
      "Roblox Studio basics",
      "Community Discord access",
      "Monthly Q&A sessions",
      "Basic project templates"
    ],
    popular: false,
    category: "tier-a"
  },
  {
    id: 2,
    name: "Tier B",
    description: "Advanced learning with comprehensive courses and premium support.",
    price: 50,
    billing: "month",
    features: [
      "All Tier A features",
      "Advanced Combat Systems course",
      "Data Persistence Mastery",
      "MMO RPG Development course",
      "Priority Discord support",
      "1-on-1 mentoring sessions",
      "Advanced project templates",
      "Source code access",
      "Certificate of completion",
      "Exclusive workshops"
    ],
    popular: true,
    category: "tier-b"
  }
];

const coursePreviews = [
  {
    id: 1,
    name: "Roblox Development Fundamentals",
    description: "Master the basics of Roblox Studio, Lua scripting, and game development principles.",
    duration: "8 weeks",
    level: "Beginner",
    students: 250,
    rating: 4.9,
    image: "/qus/images/Logo.jpg",
    category: "fundamentals",
    tier: "A"
  },
  {
    id: 2,
    name: "Advanced Combat Systems",
    description: "Learn to create sophisticated combat mechanics with hit detection and damage systems.",
    duration: "6 weeks",
    level: "Intermediate",
    students: 180,
    rating: 4.8,
    image: "/qus/images/Logo.jpg",
    category: "combat",
    tier: "B"
  },
  {
    id: 3,
    name: "Data Persistence Mastery",
    description: "Master data stores, player saves, and secure data management in Roblox.",
    duration: "4 weeks",
    level: "Intermediate",
    students: 120,
    rating: 4.7,
    image: "/qus/images/Logo.jpg",
    category: "data",
    tier: "B"
  },
  {
    id: 4,
    name: "MMO RPG Development",
    description: "Build massive multiplayer online games with advanced systems and mechanics.",
    duration: "12 weeks",
    level: "Advanced",
    students: 95,
    rating: 4.9,
    image: "/qus/images/Logo.jpg",
    category: "mmo",
    tier: "B"
  }
];
---

<Layout title="Academy - Qustreso Studios" description="Join our comprehensive Roblox development academy. Learn from industry experts and master game development skills." currentPage="academy">
  
  <section class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
        Roblox <span class="bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">Academy</span>
      </h1>
      <p class="text-xl text-gray-300 mb-8">
        Learn from a 16-year-old prodigy who's already making waves in the Roblox development industry. 
        Master the skills that have earned me $6,000+ in commissions and 3.1M+ game visits.
      </p>
      <div class="flex items-center justify-center gap-6 text-sm text-gray-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-primary-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H17c-.8 0-1.54.37-2.01 1l-1.7 2.26V15h-1.5v-3H9v3H7.5V9.5l-1.96-2.61C5.11 6.37 4.37 6 3.57 6H2.46c-.8 0-1.54.37-2.01 1L0 12.5V22h16z"/>
          </svg>
          <span>500+ Students</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          <span>4.9/5 Rating</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
          </svg>
          <span>Lifetime Access</span>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="glass-primary rounded-2xl p-8 md:p-12 border border-primary-400/30">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-3xl font-bold text-white mb-6">
              From 16-Year-Old Developer to Industry Leader
            </h2>
            <p class="text-lg text-gray-300 mb-6">
              At just 16 years old, I've already achieved what many developers spend years trying to accomplish. 
              I've closed over $6,000 in commissions, contributed to games with 3.1M+ visits, and built a reputation 
              for delivering professional-quality Roblox development services.
            </p>
            <p class="text-lg text-gray-300 mb-6">
              Now, I'm sharing my knowledge and experience with aspiring developers through my comprehensive academy. 
              Learn the exact techniques and strategies that have made me successful in the competitive Roblox development market.
            </p>
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2 text-sm text-gray-300">
                <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>2+ Years Experience</span>
              </div>
              <div class="flex items-center gap-2 text-sm text-gray-300">
                <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>50+ Happy Clients</span>
              </div>
              <div class="flex items-center gap-2 text-sm text-gray-300">
                <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>3.1M+ Game Visits</span>
              </div>
            </div>
          </div>
          <div class="text-center">
            <img src="/qus/images/Logo.jpg" alt="Qustreso Studios" class="w-64 h-64 mx-auto rounded-2xl object-cover border border-primary-400/30">
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">
          Choose Your Learning Path
        </h2>
        <p class="text-lg text-gray-300">
          Select the subscription tier that best fits your learning goals
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {subscriptionTiers.map((tier) => (
          <div class="subscription-card group" data-category={tier.category}>
            {tier.popular && (
              <div class="popular-badge">
                <span>Most Popular</span>
              </div>
            )}
            
            <div class="subscription-content">
              <div class="subscription-header">
                <h3 class="subscription-title">{tier.name}</h3>
                <p class="subscription-description">{tier.description}</p>
              </div>
              
              <div class="subscription-pricing">
                <div class="price-container">
                  <span class="current-price">${tier.price}</span>
                  <span class="billing-period">/{tier.billing}</span>
                </div>
              </div>
              
              <div class="subscription-features">
                <ul class="space-y-3">
                  {tier.features.map((feature) => (
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                      <svg class="w-4 h-4 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
              
              <button class="subscribe-btn">
                Subscribe Now
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">
          Available Courses
        </h2>
        <p class="text-lg text-gray-300">
          Preview the courses included in your subscription
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="filter-btn active" data-filter="all">
          All Courses
        </button>
        <button class="filter-btn" data-filter="fundamentals">
          Fundamentals
        </button>
        <button class="filter-btn" data-filter="combat">
          Combat Systems
        </button>
        <button class="filter-btn" data-filter="data">
          Data Management
        </button>
        <button class="filter-btn" data-filter="mmo">
          MMO Development
        </button>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="courses-grid">
        {coursePreviews.map((course) => (
          <div class="course-preview-card group" data-category={course.category}>
            <div class="tier-badge tier-{course.tier.toLowerCase()}">
              Tier {course.tier}
            </div>
            
            <div class="course-image">
              <img src={course.image} alt={course.name} class="w-full h-48 object-cover rounded-t-2xl">
            </div>
            
            <div class="course-content">
              <div class="course-header">
                <h3 class="course-title">{course.name}</h3>
                <div class="course-meta">
                  <span class="level-badge level-{course.level.toLowerCase()}">{course.level}</span>
                  <span class="duration">{course.duration}</span>
                </div>
              </div>
              
              <p class="course-description">{course.description}</p>
              
              <div class="course-stats">
                <div class="flex items-center gap-4 text-sm text-gray-400">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H17c-.8 0-1.54.37-2.01 1l-1.7 2.26V15h-1.5v-3H9v3H7.5V9.5l-1.96-2.61C5.11 6.37 4.37 6 3.57 6H2.46c-.8 0-1.54.37-2.01 1L0 12.5V22h16z"/>
                    </svg>
                    {course.students} students
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    {course.rating}
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white mb-6">
        Ready to Start Your Learning Journey?
      </h2>
      <p class="text-lg text-gray-300 mb-8">
        Join hundreds of students who are already learning from our comprehensive academy. 
        Choose your tier and start building the games you've always dreamed of creating.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button class="cta-btn primary">
          Choose Your Tier
        </button>
        <button class="cta-btn secondary">
          View All Courses
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .filter-btn {
    @apply px-6 py-3 rounded-lg text-sm font-medium transition-all duration-200;
    @apply text-gray-300 hover:text-white hover:glass;
  }
  
  .filter-btn.active {
    @apply text-primary-400 glass-primary;
  }
  
  .subscription-card {
    @apply glass rounded-2xl overflow-hidden transition-all duration-300 relative;
    @apply hover:glass-primary hover:scale-105 hover:shadow-2xl;
  }
  
  .popular-badge {
    @apply absolute top-4 right-4 bg-gradient-to-r from-primary-400 to-secondary-400;
    @apply text-white text-xs font-bold px-3 py-1 rounded-full z-10;
  }
  
  .subscription-content {
    @apply p-8;
  }
  
  .subscription-header {
    @apply mb-6 text-center;
  }
  
  .subscription-title {
    @apply text-2xl font-bold text-white mb-2;
  }
  
  .subscription-description {
    @apply text-gray-300;
  }
  
  .subscription-pricing {
    @apply mb-6 text-center;
  }
  
  .price-container {
    @apply flex items-center justify-center gap-1;
  }
  
  .current-price {
    @apply text-4xl font-bold text-white;
  }
  
  .billing-period {
    @apply text-lg text-gray-400;
  }
  
  .subscription-features {
    @apply mb-8;
  }
  
  .subscribe-btn {
    @apply w-full bg-gradient-to-r from-primary-400 to-secondary-400;
    @apply text-white font-bold px-6 py-3 rounded-lg;
    @apply hover:shadow-lg hover:scale-105 transition-all duration-200;
  }
  
  .course-preview-card {
    @apply glass rounded-2xl overflow-hidden transition-all duration-300 relative;
    @apply hover:glass-primary hover:scale-105 hover:shadow-2xl;
  }
  
  .tier-badge {
    @apply absolute top-4 right-4 text-white text-xs font-bold px-3 py-1 rounded-full z-10;
  }
  
  .tier-a {
    @apply bg-blue-500/80;
  }
  
  .tier-b {
    @apply bg-purple-500/80;
  }
  
  .course-content {
    @apply p-6;
  }
  
  .course-header {
    @apply mb-4;
  }
  
  .course-title {
    @apply text-xl font-bold text-white mb-2;
  }
  
  .course-meta {
    @apply flex items-center gap-3;
  }
  
  .level-badge {
    @apply text-xs font-bold px-2 py-1 rounded-full;
  }
  
  .level-beginner {
    @apply bg-green-500/20 text-green-400;
  }
  
  .level-intermediate {
    @apply bg-yellow-500/20 text-yellow-400;
  }
  
  .level-advanced {
    @apply bg-red-500/20 text-red-400;
  }
  
  .duration {
    @apply text-sm text-gray-400;
  }
  
  .course-description {
    @apply text-gray-300 mb-4;
  }
  
  .course-stats {
    @apply mb-4;
  }
  
  .cta-btn {
    @apply px-8 py-3 rounded-lg font-bold transition-all duration-200;
  }
  
  .cta-btn.primary {
    @apply bg-gradient-to-r from-primary-400 to-secondary-400 text-white;
    @apply hover:shadow-lg hover:scale-105;
  }
  
  .cta-btn.secondary {
    @apply glass text-white border border-white/20;
    @apply hover:glass-primary hover:border-primary-400/50;
  }
</style>

<script>
  const filterButtons = document.querySelectorAll('.filter-btn');
  const coursePreviewCards = document.querySelectorAll('.course-preview-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');
      
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      coursePreviewCards.forEach(card => {
        const category = card.getAttribute('data-category');
        if (filter === 'all' || category === filter) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script> 
